
<h1>Listing Actors</h1>
<%= link_to 'Crear Actor', new_actor_path %>
<table>
  <tr>
    <th>Name</th>
    <th>Bio</th>
    <th>Birth Date</th>
    <th>Birth Place</th>
    <th>Photo</th>
    <th colspan="3"></th>
  </tr>
 
  <% @actors.each do |actor| %>
    <tr>
      <td><%= actor.name %></td>
      <td><%= actor.bio %></td>
      <td><%= actor.birth_date %></td>
      <td><%= actor.birth_place %></td>
      <td><img src="<%= actor.image_url %>"></td>
      <td>
      <% if !actor.alive %>
        <%= actor.death_date %>
        <%= actor.death_place %>
      <% end %>
      </td>
    </tr>
  <% end %>
</table>

